                    tip: "La pratica rende perfetti! Pi√π utilizzi lo strumento, pi√π diventerai veloce nel creare schemi efficaci."
                }
            };
        }

        init() {
            // Configurar eventos del tutorial
            document.getElementById('tutorialClose').addEventListener('click', () => this.hide());
            document.getElementById('tutorialPrev').addEventListener('click', () => this.previousStep());
            document.getElementById('tutorialNext').addEventListener('click', () => this.nextStep());
            document.getElementById('tutorialFinish').addEventListener('click', () => this.complete());
            document.getElementById('skipTutorial').addEventListener('click', () => this.skipTutorial());
            
            // Configurar eventos de los pasos en la barra lateral
            document.querySelectorAll('.tutorial-step-item').forEach(item => {
                item.addEventListener('click', (e) => {
                    const step = parseInt(e.currentTarget.dataset.step);
                    this.goToStep(step);
                });
            });

            // Mostrar tutorial autom√°ticamente
            this.show();
        }

        show() {
            // El tutorial ya est√° visible por defecto en este archivo separado
            document.body.style.overflow = 'hidden';
        }

        hide() {
            // Ocultar el tutorial y redirigir a la aplicaci√≥n principal
            this.redirectToApp();
        }

        skipTutorial() {
            // Marcar como completado y redirigir
            localStorage.setItem('rugby-tutorial-completed', 'true');
            this.redirectToApp();
        }

        redirectToApp() {
            // Redirigir a la aplicaci√≥n principal
            window.location.href = 'https://josechico94.github.io/rugbyCoach/rugbyCoach33.html';
        }

        goToStep(step) {
            if (step < 1) step = 1;
            if (step > this.totalSteps) step = this.totalSteps;
            
            this.currentStep = step;
            
            // Actualizar la barra lateral
            document.querySelectorAll('.tutorial-step-item').forEach(item => {
                item.classList.remove('active');
                if (parseInt(item.dataset.step) === step) {
                    item.classList.add('active');
                }
            });
            
            // Actualizar el progreso
            const progress = ((step - 1) / (this.totalSteps - 1)) * 100;
            document.getElementById('tutorialProgressFill').style.width = `${progress}%`;
            document.getElementById('tutorialProgressText').textContent = `Passo ${step} di ${this.totalSteps}`;
            
            // Actualizar el contenido
            this.renderStepContent(step);
            
            // Actualizar los botones de navegaci√≥n
            const prevBtn = document.getElementById('tutorialPrev');
            const nextBtn = document.getElementById('tutorialNext');
            const finishBtn = document.getElementById('tutorialFinish');
            
            prevBtn.style.display = step === 1 ? 'none' : 'flex';
            nextBtn.style.display = step === this.totalSteps ? 'none' : 'flex';
            finishBtn.style.display = step === this.totalSteps ? 'flex' : 'none';
        }

        renderStepContent(step) {
            const content = this.stepContents[step];
            if (!content) return;
            
            document.getElementById('tutorialTitle').textContent = content.title;
            
            let html = '';
            
            content.features.forEach(feature => {
                html += `
                <div class="tutorial-feature">
                    <div class="tutorial-feature-icon">${feature.icon}</div>
                    <div class="tutorial-feature-content">
                        <div class="tutorial-feature-title">${feature.title}</div>
                        <div class="tutorial-feature-desc">${feature.desc}</div>
                    </div>
                </div>
                `;
            });
            
            if (content.tip) {
                html += `
                <div class="tutorial-tip">
                    <div class="tutorial-tip-title">
                        <span>üí°</span> Consiglio Pratico
                    </div>
                    <div>${content.tip}</div>
                </div>
                `;
            }
            
            if (step === 2 || step === 3) {
                html += `
                <div class="tutorial-demo">
                    <div class="tutorial-demo-title">Provalo Subito!</div>
                    <div>Quando inizierai ad usare l'applicazione, potrai mettere in pratica tutto ci√≤ che hai imparato in questo tutorial!</div>
                </div>
                `;
            }
            
            document.getElementById('tutorialStepContent').innerHTML = html;
        }

        previousStep() {
            this.goToStep(this.currentStep - 1);
        }

        nextStep() {
            this.goToStep(this.currentStep + 1);
        }

        complete() {
            // Marcar tutorial como completado y redirigir
            localStorage.setItem('rugby-tutorial-completed', 'true');
            
            // Mostrar mensaje de confirmaci√≥n
            if (window.confirm("üéâ Tutorial completato! Vuoi iniziare a usare l'applicazione?")) {
                this.redirectToApp();
            }
        }
    }

    // Inicializar el tutorial cuando el DOM est√© listo
    document.addEventListener('DOMContentLoaded', () => {
        new TutorialManager();
    });
  </script>
</body>
</html>
